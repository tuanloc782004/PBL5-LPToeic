	<!-- End custom js for this page -->
	<script>
		'use strict';

		var ctx = document.getElementById("barChart").getContext("2d");

		var barChartData = {
			labels : [ "Bài học từ vựng", "Bài học ngữ pháp", "Bài luyện nghe",
					"Bài luyện đọc hiểu", "Đề thi thử" ],
			datasets : [ {
				label : 'Số lượng',
				data : [ 20, 15, 10, 12, 8 ], // dữ liệu demo, bạn có thể thay bằng dữ liệu thật
				backgroundColor : [ 'rgba(255, 99, 132, 0.5)',
						'rgba(54, 162, 235, 0.5)', 'rgba(255, 206, 86, 0.5)',
						'rgba(75, 192, 192, 0.5)', 'rgba(153, 102, 255, 0.5)' ],
				borderColor : [ 'rgba(255,99,132,1)', 'rgba(54, 162, 235, 1)',
						'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)',
						'rgba(153, 102, 255, 1)' ],
				borderWidth : 1
			} ]
		};

		var barChartOptions = {
			responsive : true,
			scales : {
				yAxes : [ {
					ticks : {
						beginAtZero : true
					}
				} ]
			}
		};

		// Vẽ biểu đồ
		new Chart(ctx, {
			type : 'bar',
			data : barChartData,
			options : barChartOptions
		});
	</script>
